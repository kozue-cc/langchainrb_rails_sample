<h1>レシピリスト</h1>

<!-- search box-->
<%= form_tag search_path, method: :get do %>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "質問", name: :submit %>
<% end %>
<table>
    <thead>
        <tr>
            <th>タイトル</th>
            <th>詳細</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <%= turbo_frame_tag 'recipe_list' do %>
        <tbody>
            <% @recipes.each do |recipe| %>
                <tr>
                    <td><%= recipe.title %></td>
                    <td><%= recipe.description %></td>
                    <td><%= link_to "詳細", recipe %></td>
                    <td><%= link_to "編集", edit_recipe_path(recipe) %></td>
                    <td><%= link_to "削除", recipe, data: { turbo_method: :delete, turbo_confirm: "本当に削除していいですか?" } %></td>
                </tr>
            <% end %>
        </tbody>
    <% end %>
</table>

<br>

<%= link_to "New recipe", new_recipe_path %>