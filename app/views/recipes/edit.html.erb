<div class="container">
    <h1>レシピの編集</h1>

    <%= form_for @recipe do |f| %>
        <% if @recipe.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

                <ul>
                <% @recipe.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
                </ul>
            </div>
        <% end %>

        <div class="field">
            <%= f.label :タイトル, class: :label %>
            <%= f.text_field :title, id: :recipe_title, class: :textbox %>
        </div>

        <div class="field">
            <%= f.label :詳細,  class: :label %>
            <%= f.text_area :description, id: :recipe_title, class: :textarea%>
        </div>

        <div class="actions">
            <%= f.submit %>
        </div>
    <% end %>
    <%= link_to "一覧に戻る", recipes_path({}) %>
</div>
